{
  "name": "aionda",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "content:audit": "tsx scripts/content-audit.ts",
    "content:gate": "tsx scripts/content-gate.ts",
    "content:gate:strict": "tsx scripts/content-gate.ts --strict",
    "content:gate:publish": "tsx scripts/content-gate.ts --strict --verify",
    "content:fix-redirects": "tsx scripts/fix-redirect-links.ts",
    "content:fix-frontmatter": "tsx scripts/fix-frontmatter.ts",
    "content:fix-ko-tldr": "tsx scripts/fix-ko-tldr-heading.ts",
    "content:frontmatter:guard": "tsx scripts/frontmatter-guard.ts --fix",
    "content:lint": "tsx scripts/content-lint.ts",
    "content:lint:all": "tsx scripts/content-lint.ts --all",
    "content:style-fix": "tsx scripts/content-style-fix.ts",
    "content:repair": "tsx scripts/content-repair.ts",
    "content:mix": "tsx scripts/content-mix.ts",
    "content:verify": "tsx scripts/content-verify.ts",
    "crawl": "tsx scripts/crawl.ts",
    "crawl-rss": "tsx scripts/crawl-rss.ts",
    "crawl-github": "tsx scripts/crawl-github.ts",
    "crawl-all": "pnpm crawl && pnpm crawl-rss",
    "crawl-official": "tsx scripts/crawl-official.ts",
    "select": "tsx scripts/select.ts",
    "auto-select": "tsx scripts/auto-select.ts",
    "verify": "tsx scripts/verify.ts",
    "translate": "tsx scripts/translate.ts",
    "generate-post": "tsx scripts/generate-post.ts",
    "generate-roundup": "tsx scripts/generate-roundup.ts",
    "generate-image": "tsx scripts/generate-image.ts",
    "extract-topics": "tsx scripts/extract-topics.ts",
    "extract-evergreen": "tsx scripts/extract-evergreen.ts",
    "research-topic": "tsx scripts/research-topic.ts",
    "write-article": "tsx scripts/write-article.ts",
    "sync-memu": "tsx scripts/sync-memu.ts",
    "pipeline": "pnpm crawl-all && pnpm extract-topics && pnpm research-topic && pnpm write-article && pnpm content:gate && pnpm generate-image",
    "pipeline:strict": "pnpm crawl-all && pnpm extract-topics && pnpm research-topic && pnpm write-article && pnpm content:gate:strict && pnpm generate-image",
    "pipeline:publish": "pnpm crawl-all && pnpm extract-topics -- --limit=3 && pnpm research-topic -- --limit=3 --from-last-extract && pnpm write-article && pnpm content:gate:publish && pnpm generate-image -- --limit=1"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.6.1",
    "gray-matter": "^4.0.3",
    "openai": "^6.16.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "sharp": "^0.34.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
