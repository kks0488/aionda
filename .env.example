# ===========================================
# aionda 환경 변수 설정
# ===========================================
# 이 파일을 .env.local로 복사하고 실제 값을 입력하세요
# cp .env.example .env.local

# ------------------------------------------
# AI API Keys
# ------------------------------------------

# Gemini API Key (이미지 생성, 검증 등)
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Gemini 모델 (기본값: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Anthropic API Key (번역, 검증 등 - 선택적)
# https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ------------------------------------------
# Auto-Selection Settings
# ------------------------------------------

# 자동 선택 최소 품질 점수 (기본값: 30)
MIN_QUALITY_SCORE=30

# 한 번에 자동 선택할 최대 포스트 수 (기본값: 5)
MAX_POSTS=5

# ------------------------------------------
# Next.js / Web App
# ------------------------------------------

# Cover images
# Disable all cover images: set to false
ENABLE_COVER_IMAGES=true
# Image generation is cost-sensitive; enable explicitly when needed
ENABLE_IMAGE_GENERATION=false

# 사이트 URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google AdSense
NEXT_PUBLIC_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# ------------------------------------------
# Server Port
# ------------------------------------------
PORT=3000
